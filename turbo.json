{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "pages:build": {
      "dependsOn": ["^build"],
      "outputs": [".vercel/output/**"]
    },
    "preview": {
      "dependsOn": ["pages:build"],
      "cache": false
    },
    "deploy": {
      "dependsOn": ["pages:build"],
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "outputs": ["node_modules/.cache/eslint/**", "node_modules/.cache/tsc/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
