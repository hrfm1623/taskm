{
  "name": "taskm",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:pages": "turbo run pages:build",
    "preview:pages": "turbo run preview --filter=frontend",
    "deploy:pages": "turbo run deploy --filter=frontend",
    "dev": "fuser -k 8787/tcp || true && turbo dev --force && rm -rf .turbo",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "turbo": "2.0.1"
  },
  "packageManager": "pnpm@8.13.1",
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ]
}
